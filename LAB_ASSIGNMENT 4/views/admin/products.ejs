<h2 class="mb-4">Manage Products</h2>
<a href="/admin/products/add" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add Product</a>

<table class="table table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><img src="<%= product.image %>" width="60" class="rounded"></td>
        <td><%= product.name %></td>
        <td><span class="badge bg-secondary"><%= product.category %></span></td>
        <td>Rs. <%= product.price %></td>
        <td>
          <a href="/admin/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">
            <i class="fas fa-edit"></i>
          </a>
          <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this product?')">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>