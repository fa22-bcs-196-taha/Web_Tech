<div class="container py-5">
  <h2 class="mb-4">Order Preview</h2>
  <div class="card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr><th>Product</th><th>Price</th><th>Qty</th><th>Total</th></tr>
        </thead>
        <tbody>
          <% cart.forEach(item => { %>
            <tr>
              <td><%= item.name %></td>
              <td>Rs. <%= item.price %></td>
              <td><%= item.quantity %></td>
              <td>Rs. <%= item.price * item.quantity %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="text-end">
        <p><strong>Subtotal:</strong> Rs. <%= subtotal %></p>
        <% if (couponApplied) { %>
          <p class="text-success"><strong>Discount (SAVE10):</strong> - Rs. <%= discountAmount.toFixed(2) %></p>
        <% } %>
        <h4><strong>Grand Total:</strong> Rs. <%= total.toFixed(2) %></h4>
      </div>
    </div>
  </div>

  <form action="/order/confirm" method="POST" class="mt-4">
    <div class="mb-3">
      <label class="form-label">Your Email</label>
      <input type="email" name="email" class="form-control" required>
    </div>
    <input type="hidden" name="coupon" value="SAVE10"> <!-- Optional: pre-apply -->
    <div class="d-flex gap-3">
      <a href="/" class="btn btn-secondary">Back to Cart</a>
      <button type="submit" class="btn btn-danger">Confirm Order</button>
    </div>
  </form>
</div>