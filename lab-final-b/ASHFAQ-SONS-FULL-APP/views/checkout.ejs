
<div class="container py-4 py-md-5">

  <!-- Progress Header -->
  <div class="row mb-5">
    <div class="col">
      <ul class="nav nav-pills justify-content-center gap-3 flex-wrap progress-step">
        <li class="nav-item"><span class="nav-link disabled">Cart</span></li>
        <li class="nav-item"><span class="nav-link disabled">Address</span></li>
        <li class="nav-item"><span class="nav-link active">Checkout</span></li>
        <li class="nav-item"><span class="nav-link disabled">Review</span></li>
      </ul>
    </div>
  </div>

  <div class="row g-4">
    
    <!-- Left: Form -->
    <div class="col-12 col-lg-7">
      
      <!-- Customer & Shipping -->
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="h4 mb-4">Shipping & Contact</h2>
          <form id="checkoutForm" novalidate>
            
            <div class="row g-3">
              <div class="col-md-6">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-12">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-md-4">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" value="Lahore" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-md-4">
                <label for="postal" class="form-label">Postal Code</label>
                <input type="text" class="form-control" id="postal" required>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-md-4">
                <label for="country" class="form-label">Country</label>
                <select class="form-select" id="country" required>
                  <option value="" disabled>Select Country</option>
                  <option value="Pakistan" selected>Pakistan</option>
                </select>
                <div class="invalid-feedback"></div>
              </div>
              <div class="col-12">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="billingSame">
                  <label class="form-check-label" for="billingSame">
                    Billing address same as shipping
                  </label>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Payment Method -->
      <div class="card">
        <div class="card-body">
          <h2 class="h4 mb-4">Payment Method</h2>
          
          <div class="d-flex flex-column gap-3">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="payment" id="cod" value="cod" checked>
              <label class="form-check-label" for="cod">Cash on Delivery (COD)</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="payment" id="card" value="card">
              <label class="form-check-label" for="card">Credit/Debit Card</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="payment" id="wallet" value="wallet">
              <label class="form-check-label" for="wallet">Digital Wallet</label>
            </div>
          </div>

          <!-- Card Details -->
          <div id="cardDetails" class="mt-4 d-none">
            <div class="row g-3">
              <div class="col-12">
                <label for="cardName" class="form-label">Cardholder Name</label>
                <input type="text" class="form-control" id="cardName">
              </div>
              <div class="col-md-8">
                <label for="cardNumber" class="form-label">Card Number</label>
                <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19">
              </div>
              <div class="col-md-2">
                <label for="expiry" class="form-label">Expiry</label>
                <input type="text" class="form-control" id="expiry" placeholder="MM/YY">
              </div>
              <div class="col-md-2">
                <label for="cvv" class="form-label">CVV</label>
                <input type="text" class="form-control" id="cvv" placeholder="123" maxlength="3">
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- Right: Order Summary -->
    <div class="col-12 col-lg-5">
      <div class="card sticky-top" style="top: 1rem;">
        <div class="card-body">
          <h2 class="h4 mb-4">Order Summary</h2>
          
          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item d-flex justify-content-between">
              <span>Mixed Mithai Box (1kg)</span>
              <span>Rs. 2,800</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Gulab Jamun (500g)</span>
              <span>Rs. 1,200</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Barfi Special (500g)</span>
              <span>Rs. 1,500</span>
            </li>
          </ul>

          <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Coupon Code">
            <button class="btn btn-outline-secondary" type="button">Apply</button>
          </div>

          <div class="d-flex justify-content-between mb-2"><span>Subtotal</span><strong>Rs. 5,500</strong></div>
          <div class="d-flex justify-content-between mb-2"><span>Shipping</span><strong>Rs. 150</strong></div>
          <div class="d-flex justify-content-between mb-2"><span>Tax</span><strong>Rs. 330</strong></div>
          <hr>
          <div class="d-flex justify-content-between mb-4"><strong>Grand Total</strong><strong class="text-danger fs-5">Rs. 5,980</strong></div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="termsCheck" required>
            <label class="form-check-label" for="termsCheck">
              I agree to the <a href="#" class="text-decoration-underline">Terms & Conditions</a>
            </label>
          </div>

          <button type="button" class="btn btn-danger btn-lg w-100" id="placeOrderBtn">Place Order</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// JavaScript from your original checkout page (show/hide card details + terms enable button)
document.querySelectorAll('input[name="payment"]').forEach(radio => {
  radio.addEventListener('change', () => {
    document.getElementById('cardDetails').classList.toggle('d-none', radio.id !== 'card');
  });
});

const termsCheck = document.getElementById('termsCheck');
const placeOrderBtn = document.getElementById('placeOrderBtn');
termsCheck.addEventListener('change', () => {
  placeOrderBtn.disabled = !termsCheck.checked;
});
placeOrderBtn.disabled = !termsCheck.checked;
</script>